# ===========================
# Database Configuration
# ===========================

# Supabase PostgreSQL database URL
# Get this from your Supabase project settings > Database
DATABASE_URL=postgresql://postgres:your_password@db.your_project_ref.supabase.co:5432/postgres

# Base URL for the application
BASE_URL=your_base_url_here

# Enable or disable debug mode (false for production)
DEBUG=false

# ===========================
# Stripe API Configuration
# ===========================

# Stripe secret key (use production keys for live deployment)
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"

# Stripe publishable key (use production keys for live deployment)
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"

# Stripe webhook secret (get from your webhook endpoint in Stripe Dashboard)
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# ===========================
# Admin API Key
# ===========================

# API key for admin access (generate a secure random string)
ADMIN_API_KEY="your_secure_admin_key"

# ===========================
# SMTP Email Configuration
# ===========================

SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-gmail-app-password"
NOTIFY_EMAIL="your-email@gmail.com"